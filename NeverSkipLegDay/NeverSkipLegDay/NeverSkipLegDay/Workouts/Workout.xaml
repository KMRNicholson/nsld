<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             BackgroundImageSource="https://i.imgur.com/0UlThfF.jpg?1"
             mc:Ignorable="d"
             x:Class="NeverSkipLegDay.Workouts.Workout">
  <NavigationPage.TitleView>
    <Label TextColor="{StaticResource BarTextColor}"
      FontSize="20" 
      Text="E X E R C I S E S"
      HorizontalOptions="Center"
      Margin="0,0,70,0"/>
  </NavigationPage.TitleView>
  <ContentPage.Content>
    <StackLayout
      Spacing="0">
      <StackLayout
        BackgroundColor="{StaticResource CardBackgroundColor}"
        Margin="10,10,10,1"
        VerticalOptions="Start">
        <Label
          Text="{Binding Name}"
          FontSize="20"
          TextColor="{StaticResource CardTextColor}"
          Margin="10"/>
      </StackLayout>
      <StackLayout
        VerticalOptions="Start">
        <ListView 
          x:Name="listView"
          Margin="10,0,10,10" 
          RowHeight="50"
          ItemSelected="OnExerciseSelected">
          <ListView.ItemTemplate>
            <DataTemplate>
              <ViewCell>
                <StackLayout 
                  BackgroundColor="{StaticResource CardBackgroundColor}"
                  Orientation="Horizontal">
                  <Label 
                    Text="{Binding Name}"
                    FontSize="17"
                    Margin="10"
                    TextColor="{StaticResource CardTextColor}"
                    VerticalOptions="Center"
                    HorizontalOptions="StartAndExpand"/>
                  <Button 
                    BindingContext="{Binding ID, StringFormat='Edit,{0:F0}'}"
                    Text="EDIT"
                    FontSize="10"
                    WidthRequest="45"
                    HeightRequest="35"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    BackgroundColor="{StaticResource BarBackgroundColor}"
                    TextColor="{StaticResource BarTextColor}"
                    Clicked="OnAddOrEdit"/>
                  <Button 
                    BindingContext="{Binding ID}"
                    Text="DEL"
                    FontSize="10"
                    WidthRequest="45"
                    HeightRequest="35"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="0,0,10,0"
                    BackgroundColor="{StaticResource BarBackgroundColor}"
                    TextColor="{StaticResource BarTextColor}"
                    Clicked="OnDelete"/>
                </StackLayout>
              </ViewCell>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </StackLayout>
      <Button 
        BindingContext="{Binding ID, StringFormat='Add,{0:F0}'}"
        WidthRequest="80" 
        HeightRequest="80" 
        CornerRadius="40" 
        HorizontalOptions="End" 
        VerticalOptions="End" 
        Text="Add" 
        Margin="20"
        Clicked="OnAddOrEdit"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>