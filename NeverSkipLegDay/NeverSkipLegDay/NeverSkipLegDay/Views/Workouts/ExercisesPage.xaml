<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{StaticResource WorkoutsBackgroundColor}"
             x:Name="exercisesPage"
             x:Class="NeverSkipLegDay.Views.ExercisesPage">
  <NavigationPage.TitleView>
    <Label
      FontAttributes="Bold"
      TextColor="{StaticResource BarTextColor}"
      FontSize="20" 
      Text="E X E R C I S E S"
      HorizontalOptions="Center"
      Margin="0,0,70,0"/>
  </NavigationPage.TitleView>
  <ContentPage.Content>
    <StackLayout
      Spacing="0">
      <StackLayout
        BackgroundColor="{StaticResource CardBackgroundColor}"
        VerticalOptions="Start"
        Margin="10,10,10,1"
        HeightRequest="80">
        <Label
          CharacterSpacing="1"
          HorizontalOptions="Center"
          VerticalOptions="CenterAndExpand"
          Text="{Binding Workout.Name}"
          FontSize="20"
          TextColor="{StaticResource CardTextColor}"
          Margin="10"/>
      </StackLayout>
      <StackLayout
        VerticalOptions="Start">
        <Label
          x:Name="helpLabel"
          BackgroundColor="{StaticResource CardBackgroundColor}"
          Text='It looks like you have not created any exercises.. Please, click the "ADD EXERCISE" button below to create your first exercise!'
          CharacterSpacing="3"
          FontSize="15"
          Padding="20"
          Margin="50"
          TextColor="{StaticResource CardTextColor}"
          HorizontalOptions="Center"
          HorizontalTextAlignment="Center"/>
        <ListView 
          x:Name="listView"
          Margin="10,0,10,10" 
          RowHeight="80"
          ItemsSource="{Binding Exercises}"
          SelectedItem="{Binding SelectedExercise, Mode=TwoWay}"
          HasUnevenRows="True"
          ItemSelected="OnExerciseSelected">
          <ListView.ItemTemplate>
            <DataTemplate>
              <ViewCell>
                <StackLayout 
                  BackgroundColor="{StaticResource CardBackgroundColor}"
                  Orientation="Horizontal">
                  <Label 
                    Text="{Binding Name}"
                    CharacterSpacing="1"
                    FontSize="20"
                    Margin="20"
                    TextColor="{StaticResource CardTextColor}"
                    VerticalOptions="Center"
                    HorizontalOptions="StartAndExpand"/>
                  <Button 
                    CharacterSpacing="1"
                    Text="EDIT"
                    FontSize="10"
                    WidthRequest="50"
                    HeightRequest="50"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="0,0,-5,0"
                    BorderColor="{StaticResource CardTextColor}"
                    BorderWidth="1"
                    BackgroundColor="{StaticResource PanelButtonColor}"
                    TextColor="{StaticResource CardTextColor}"
                    Command="{Binding Source={x:Reference exercisesPage}, Path=ViewModel.EditExerciseCommand}" 
                    CommandParameter="{Binding .}"/>
                  <Button 
                    CharacterSpacing="1"
                    Text="DEL"
                    FontSize="10"
                    WidthRequest="50"
                    HeightRequest="50"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="10"
                    BorderColor="{StaticResource CardTextColor}"
                    BorderWidth="1"
                    BackgroundColor="{StaticResource PanelButtonColor}"
                    TextColor="{StaticResource CardTextColor}"
                    Command="{Binding Source={x:Reference exercisesPage}, Path=ViewModel.DeleteExerciseCommand}" 
                    CommandParameter="{Binding .}"/>
                </StackLayout>
              </ViewCell>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </StackLayout>
      <Button 
        BackgroundColor="{StaticResource PanelButtonColor}"
        BorderColor="{StaticResource PanelButtonBorderColor}"
        TextColor="{StaticResource PanelButtonTextColor}"
        BorderWidth="1"
        WidthRequest="150" 
        HeightRequest="80"
        HorizontalOptions="Center" 
        VerticalOptions="End"
        CharacterSpacing="5"
        Text="Add Exercise" 
        Margin="0,0,0,20"
        Command="{Binding AddExerciseCommand}"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>