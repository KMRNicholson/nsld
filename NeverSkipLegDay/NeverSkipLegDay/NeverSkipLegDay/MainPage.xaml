<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{StaticResource RecordsBackgroundColor}"
             x:Class="NeverSkipLegDay.MainPage">
  <ContentPage.Content>
    <Grid
      RowSpacing="0"    
      ColumnSpacing="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="20*"/>
        <RowDefinition Height="20*"/>
        <RowDefinition Height="20*"/>
        <RowDefinition Height="20*"/>
        <RowDefinition Height="20*"/>
      </Grid.RowDefinitions>
      <StackLayout
        x:Name="never"
        Opacity="0"
        BackgroundColor="{StaticResource BarBackgroundColor}"
        Grid.Row="0">
        <Label 
          CharacterSpacing="1"
          Style="{StaticResource MainPageLabel}"
          Text="NEVER"/>
      </StackLayout>
      <StackLayout
        x:Name="skip"
        Opacity="0"
        BackgroundColor="{StaticResource WorkoutsBackgroundColor}"
        Grid.Row="1">
        <Label
          CharacterSpacing="1"
          Style="{StaticResource MainPageLabel}"
          Text="SKIP" />
      </StackLayout>
      <StackLayout
        Opacity="0"
        x:Name="leg"
        BackgroundColor="{StaticResource NutritionBackgroundColor}"
        Grid.Row="2">
        <Label 
          CharacterSpacing="1"
          Style="{StaticResource MainPageLabel}"
          Text="LEG" />
      </StackLayout>
      <StackLayout
        Opacity="0"
        x:Name="day"
        BackgroundColor="{StaticResource RecordsBackgroundColor}"
        Grid.Row="3">
        <Label 
          CharacterSpacing="1"
          Style="{StaticResource MainPageLabel}"
          Text="DAY"  />
      </StackLayout>
      <StackLayout
        x:Name="enter"
        BackgroundColor="LightSteelBlue"
        Grid.Row="4">
        <Button 
          Style="{StaticResource PanelButton}"
          Text="E n t e r"
          Clicked="OnEnter"/>
      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>
